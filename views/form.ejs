<%- include ('partials/header'); -%>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<div style="padding-left:200px; padding-right: 300px; padding-top: 20px;">
    <h1 style="padding-bottom: 10px;">SUBMIT DETAILS</h1>
<form action="/" method="POST" required:>
    <div class="form-group">
        <label>Employee Name</label>
        <input type="text" class="form-control" id="getname"  name="empname" placeholder="Full name" required>
    </div>
    <div class="form-group">
        <label>Employee Phone Number</label>
        <input type="tel" class="form-control" id="getphone" name="empphone" placeholder="123456789" pattern="[0-9]{10}" required>
    </div>
    <div class="form-group">
        <label>Type of Expense</label>
        <input type="text" class="form-control" id="getexp"  name="typeofexp" placeholder="Type of expense(Travel or Telecom)" required>
    </div>
    <div class="form-group">
        <label>Amount of Expense</label>
        <input type="number" class="form-control" id="getexp"  name="amount" placeholder="Enter value" required>
    </div>
    <button type="submit" class="btn btn-primary" >Submit</button> 
  </form>
</div>

